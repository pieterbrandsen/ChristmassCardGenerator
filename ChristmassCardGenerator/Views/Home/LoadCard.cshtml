@model IEnumerable<ChristmassCardGenerator.Models.Card>

@{
    ViewData["Title"] = "Load Card";
    int cardNumber = 0;
}

<h1>Select a card</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Card Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @cardNumber
                    @{
                        cardNumber++;
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CardTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.ID">Load</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index">Return to Homepage</a>
